{
  "name": "closetjs",
  "author": {
    "name": "Henrik Giesel",
    "email": "hengiesel@gmail.com",
    "url": "https://github.com/hgiesel"
  },
  "license": "GPL-3.0",
  "version": "0.2.5",
  "browser": "index.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/hgiesel/closet.git"
  },
  "scripts": {
    "install-dependencies": "bin/install-dependencies.sh",
    "compile:setups": "node bin/compile-setups.js",
    "compile:parser": "bin/compile-parser.sh",
    "compile:anki": "bin/compile-anki.sh",
    "create-favicon": "bin/create-favicon.sh",
    "prepare": "run-p compile:setups compile:parser compile:anki create-favicon",

    "pack": "run-p pack:main pack:docs pack:anki",
    "pack:main": "rollup",
    "pack:docs": "rollup -c --configDocs",
    "pack:anki": "rollup -c --configAnki",
    "pack:anki:dev": "rollup -c --configAnki --configDev",

    "build": "run-s prepare pack",
    "build:main": "run-s compile:parser pack:main",
    "build:docs": "run-s compile:parser create-favicon pack:docs",
    "build:anki": "run-s compile:parser compile:anki pack:anki",
    "build:anki:dev": "run-s compile:parser compile:anki pack:anki:dev",

    "pack:watch:main": "rollup -w -c --configDev",
    "pack:watch:docs": "rollup -w -c --configDocs --configDev",
    "pack:watch:anki": "rollup -w -c --configAnki --configDev",

    "watch": "run-s compile:parser compile:anki create-favicon watch:main watch:docs watch:anki",
    "watch:main": "run-s compile:parser pack:watch:main",
    "watch:docs": "run-s compile:parser pack:watch:docs",
    "watch:anki": "run-s compile:parser compile:anki pack:watch:anki",

    "serve:docs": "bin/serve.sh",
    "serve:test": "serve -l 59045",
    "dev:docs": "run-p serve:docs watch:docs",
    "dev:anki": "run-s watch:anki",
    "link": "bin/link.sh -c",
    "zip:sub": "bin/zip.sh",
    "zip": "run-s build:anki zip:sub",
    "zip:dev": "run-s build:anki:dev zip:sub",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "moo": "^0.5.1",
    "nearley": "^2.19.6",
    "terser": "^5.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/moo": "^0.5.3",
    "@types/nearley": "^2.11.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^7.7.0",
    "jest": "^26.4.2",
    "js-yaml": "^3.14.0",
    "jsonschema": "^1.2.6",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.32.1",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2",
    "terser-webpack-plugin": "^4.1.0",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "typescript": "^3.9.7",
    "webpack": "^5.0.0-beta.29",
    "webpack-cli": "^3.3.12"
  }
}
